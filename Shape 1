def star(num):
    k=2
    if (num%2)==0:
        for i in range(1,num):
            if i<=(num)/2:
                i*='*'
                print(f'{i}')
            else:
                j=(i-k)*'*'
                print(f'{j}')
                k=k+2     
    else:
        for i in range(1,num+1):
            if i<=(num+1)/2:
                i*='*'
                print(f'{i}')
            else:
                j=(i-k)*'*'
                print(f'{j}')
                k=k+2
